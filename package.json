{
  "name": "profitable-web-frontend",
  "version": "0.1.0",
  "description": "Next.js 15+ frontend для исследовательского блога по монетизации хобби с чистым SCSS",
  "private": true,
  "scripts": {
    "dev": "bun run next dev",
    "build": "bun run next build",
    "start": "bun run next start",
    "export": "bun run next build && bun run next export",
    "lint": "bun run next lint",
    "lint:fix": "bun run next lint --fix",
    "format": "bun run prettier --write .",
    "format:check": "bun run prettier --check .",
    "type-check": "bun run tsc --noEmit",
    "test": "bun run vitest",
    "test:ui": "bun run vitest --ui",
    "test:coverage": "bun run vitest --coverage",
    "test:watch": "bun run vitest --watch",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "cypress:headless": "cypress run --headless",
    "test:e2e": "bun run build && bun run start & cypress run --wait-on http://localhost:3000",
    "pre-commit": "bun run lint:fix && bun run format && bun run type-check && bun run test"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^10.16.0",
    "@tanstack/react-query": "^5.0.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.2.0",
    "eslint": "^8.52.0",
    "eslint-config-next": "^15.0.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "prettier": "^3.0.0",
    "sass": "^1.69.0",
    "pre-commit": "^1.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "vitest": "^1.0.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "jsdom": "^22.1.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "cypress": "^13.6.0",
    "start-server-and-test": "^2.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "bun run eslint --fix",
      "bun run prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "bun run prettier --write"
    ]
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}