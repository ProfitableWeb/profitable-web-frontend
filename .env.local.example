# Environment Variables Example
# Copy this file to .env.local and update the values

# ===== APPLICATION SETTINGS =====
NEXT_PUBLIC_APP_NAME="ProfitableWeb"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="Research blog for hobby monetization strategies"

# ===== API CONFIGURATION =====
# Backend API URL (will be updated when backend is ready)
NEXT_PUBLIC_API_URL="http://localhost:8000/api"

# ===== ANALYTICS =====
# Google Analytics (when ready for production)
NEXT_PUBLIC_GA_ID=""

# Google Tag Manager (when ready for production)
NEXT_PUBLIC_GTM_ID=""

# ===== SEO & SOCIAL =====
# Open Graph image URL
NEXT_PUBLIC_OG_IMAGE_URL="/og-image.jpg"

# Twitter handle
NEXT_PUBLIC_TWITTER_HANDLE="@profitableweb"

# ===== THIRD-PARTY SERVICES =====
# Email service (for newsletter, contact forms)
EMAIL_SERVICE_API_KEY=""

# Search service (when implementing search)
SEARCH_API_KEY=""

# ===== DEVELOPMENT SETTINGS =====
# Show debug information in development
NEXT_PUBLIC_DEBUG_MODE="true"

# Feature flags for development
NEXT_PUBLIC_FEATURE_COMMENTS="false"
NEXT_PUBLIC_FEATURE_NEWSLETTER="false"
NEXT_PUBLIC_FEATURE_SEARCH="false"

# ===== SECURITY =====
# Session secret (for authentication when implemented)
SESSION_SECRET=""

# CORS allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# ===== DATABASE =====
# Database connection (when backend is ready)
DATABASE_URL=""

# ===== CONTENT MANAGEMENT =====
# If using headless CMS in the future
CMS_API_URL=""
CMS_API_KEY=""

# ===== MONITORING & LOGGING =====
# Error tracking service
SENTRY_DSN=""

# Performance monitoring
PERFORMANCE_MONITORING_KEY=""

# ===== SOCIAL AUTH =====
# OAuth providers (when user authentication is implemented)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ===== MISC =====
# Timezone for the application
NEXT_PUBLIC_TIMEZONE="UTC"

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE="en"